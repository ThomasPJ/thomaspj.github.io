.absolute
  position: absolute
.breadcrumbs-top
  li
    display: inline-block
    a, span
      color: #333
      font-style: normal
    span
      padding: 0 2px
    a:hover
      text-decoration: underline
    p
      color: #868080
      font-style: italic
      font-weight: lighter
      margin: 0
.media
  position: relative
.image-list li
  position: relative
.image-list li:last-child
  margin-bottom: 40px
.image-list img
  width: 100%
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  border: 3px solid #fff
  box-sizing: border-box
.image-list figure
  margin: 0
.image-list figcaption
  font-style: italic
  text-align: center
  padding: 5px 0 0 0
  color: #6b6b6b
.description
  margin: 67px 0 0 10px
  padding: 14px 14px 9px
  position: fixed
  box-sizing: border-box
  background: #fff
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  p
    word-spacing: 2px
    font-weight: lighter
    line-height: 20px
  em
    font-weight: bolder
  .code-snippet
    display: block
    font-style: italic
    font-size: 13px
    padding: 5px 0 0 0
  .tags
    margin: 10px 0 0 0
    color: #868080
    line-height: 19px
    i
      font-size: 11px
      word-spacing: 4px
  .client
    font-size: 18px
    word-spacing: 2px
    font-weight: normal
    margin: 0
    a
      color: #222
    a:hover
      text-decoration: underline
      cursor: pointer
  .date
    margin: 5px 0 0 0
  .brief
    margin: 20px 0 0 0
  .brief, .conclusion
    .brief-nutshell
      margin: 20px 0 -5px
      font-size: 15px
      word-spacing: 1px
    p
      margin: 10px 0
      a
        color: inherit
        text-decoration: underline
        cursor: pointer
      a:hover
        text-decoration: none
    p.highlight
      font-style: italic
      em
        font-style: italic
        font-weight: bolder
.full
  margin: 20px 0 0 0
.home-link
  color: #333
  display: block
  margin: 0 0 30px 0
.home-link:hover
  text-decoration: underline
.client-full
  font-size: 26px
  word-spacing: 2px
  font-weight: 400
  margin: 0
.date-full
  margin: 5px 0 0
  font-size: 14px
  line-height: 20px
  word-spacing: 2px
  font-weight: lighter
.tags-full
  font-weight: lighter
  font-style: italic
  color: #868080
  margin: 20px 0 0 0
  line-height: 20px
.brief-full
  line-height: 20px
  word-spacing: 2px
  font-weight: lighter
  margin: 10px 0 0 0
  .brief-padding
    padding: 5px 10px
  h3
    margin: 20px 0 4px 0
    font-size: 15px
  a
    color: inherit
    text-decoration: underline
    cursor: pointer
  a:hover
    text-decoration: none
  figure
    margin: 20px 0
  figcaption
    font-style: italic
    text-align: center
    padding: 5px 0 0 0
    color: #6b6b6b
    font-size: 14px
  img
    width: 100%
    margin: 5px
    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
    -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
    border: 3px solid #fff
    box-sizing: border-box
  img.small
    width: 48%
.flex
  display: flex
  display: contents
