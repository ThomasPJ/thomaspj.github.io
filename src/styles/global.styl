html, body
  height: 100%
  position: relative
  margin: 0
  padding: 0
body
  font-family: 'Signika', sans-serif
  color: #222
  background: #f5f5f5
ul li, p, em
  font-size: 14px
  font-style: normal
  letter-spacing: -0.01em
h1, h2, h3
  font-size: 13px
  font-weight: normal
a
  text-decoration: none
  color: #ADADAD
h1 em, h2 em
  display: block
p, h1, h2
  margin: 0 0 5px 0
ul
  padding: 0
  margin: 0
ul li
  list-style-type: none  
strong
  color: #545454
.divider
  width: 20px
  height: 2px
  background: #CFCFCF
  display: block
  margin: 30px 0 15px 0
::selection
  background: #333
  color: #fff
  text-shadow: none
header
  padding: 10px 0
  background: rgba(255, 255, 255, 0.95)
  background-position-y: -30px
  border-bottom: 1px solid #E9E9E9
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 5
  .container .name-hp
    padding-left: 54px
  .container .name-project
    margin-left: 7px
  a
    display: block
    img
      display: block
      width: 32px
      float: left
  .profile
    line-height: 15px
    margin: 0px 0 0 10px
    float: left
    h1
      line-height: 16px
    h1, span, strong
      font-size: 13px
    h1, span
      margin: 0
      color: #222
      span, strong
        color: #ADADAD
        font-weight: lighter
  a:hover img
    opacity: 0.8
  a:hover h1 span
    color: #ADADAD
  a:hover span
    color: #E04C26
  a:hover strong
    color: #FF8566
footer
  margin: 30px 0 0 0
  padding: 7px 0 6px 0
  background: #fff
  border-top: 1px solid #EBEBEB
  p
    color: #ADADAD
    text-transform: uppercase
    font-weight: lighter
    font-size: 12px
    margin: 4px 0 0 0
.nav
  li
    display: inline-block
    margin: 0 10px
    a
      color: #ADADAD
      text-transform: uppercase
      font-weight: lighter
      font-size: 12px
    a:hover
      color: #222
      text-decoration: underline
  li:first-child
    margin: 0 10px 0 0
.signature
  p
    color: #323232
