.index
  a
    cursor: text
  a:hover img
    opacity: 1
  a:hover h1
    color: #222
.header-nav
  padding-left: 220px
  ul
    padding: 6px 0 0 0
    li
      display: inline-block
      margin: 0 4px
      a
        margin: 0px
        font-weight: lighter
        font-size: 14px
      a:hover
        color: #323232
        text-decoration: none
    span
      color: #E6E6E6
      font-weight: lighter
.wrap .main
  margin-top: 73px
.categories
  li
    margin: 30px 0 0 0
    .cat-title
      text-transform: uppercase
      padding-left: 10px
      font-size: 14px
      strong
        letter-spacing: -0.5px
        font-weight: normal
        word-spacing: 1px
  li:first-child
    margin-top: 0px
.category
  overflow: hidden
  li
    margin: 0 0 20px
    background: #FFFEFC
    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05)
    -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05)
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05)
    -webkit-transition: 0.1s ease-in-out
    -moz-transition: 0.1s ease-in-out
    -o-transition: 0.1s ease-in-out
    transition: 0.1s ease-in-out
    a
      overflow: hidden
      display: block
    a:hover .text h2, a:hover .text h3
      color: #333
      text-decoration: none
    a:visited img
      opacity: 0.5
    .thumbnail
      background: #fff
      img
        width: 100%
    .text
      padding: 10px 7px 5px
      h2, h3
        margin: 0 0 5px 0
        font-size: 14px
      .project-date em
        color: #C0C0C0
        font-weight: lighter
        font-style: italic
  li:hover
    box-shadow: 0 2px 3px rgba(0, 0, 0, 0.075)
