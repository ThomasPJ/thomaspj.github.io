.about-breadcrumbs
  margin: 32px 0 15px
.about-photo-item figure
  margin: 0 0 20px 0
.about-photo-item img
  width: 100%
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  border: 3px solid #fff
  box-sizing: border-box
.about-photo-item figcaption
  font-style: italic
  padding: 2px 0 0 0
  text-align: center
  color: #6b6b6b
.about-content
  margin: 67px 0 0 10px
  padding: 17px
  box-sizing: border-box
  background: #fff
  -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.075)
.about-title
  font-weight: bolder
  margin: 0 0 20px 0
  color: #222
  font-size: 20px
.about-content p
  font-weight: lighter
  color: #222
  line-height: 20px
  word-spacing: 2px
.about-links
  margin-top: 15px
.about-content em
  font-weight: bolder
.about-content a
  color: #222
  text-decoration: underline
  cursor: pointer
.about-content a:hover
  text-decoration: none
.about-nutshell
  margin: 15px 0 4px
  font-size: 15px
  word-spacing: 1px
