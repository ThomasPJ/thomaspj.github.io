extends ../../layouts/category

block head
  title #{i18n.name}'s Portfolio | Search Engine Marketing projects
  meta(name="description", content="I'm an SEO consultant and I'm passionate about AMP and PageSpeed optimizations: back-end and front-end.")
  meta(property='og:site_name', content="#{i18n.name}'s Portfolio")
  meta(property='og:type', content='website')
  meta(property='og:title', content="#{i18n.name}'s Portfolio | Search Engine Marketing projects")
  meta(property='og:description', content="I'm an SEO consultant and I'm passionate about AMP and PageSpeed optimizations: back-end and front-end.")
  meta(property='og:url', content='#{i18n.website}/category/search-engine-marketing.html')
  meta(property='og:image', content='#{i18n.website}/images/thomas-petitjean.png')
  meta(property='og:image:alt', content='#{i18n.name}, Search Engine Marketing projects')
  meta(property="og:image:width" content="200")
  meta(property="og:image:height" content="200")
  meta(name="twitter:card" content="summary")
  meta(name="twitter:site" content="@_tpetitjean")
  meta(name="twitter:creator" content="@_tpetitjean")
  meta(name="twitter:title" content="#{i18n.name}'s Portfolio | Search Engine Marketing projects")
  meta(name="twitter:description" content="I'm an SEO consultant and I'm passionate about AMP and PageSpeed optimizations: back-end and front-end.")
  
block page-profession
  h2.header-heading #{i18n.name}, SEO

block category
  .main
    .container
      .sixteen.columns
        .fourteen.columns.offset-by-one
          .category-intro-container
            h1.intro-title Search Engine Marketing
            p.intro-nutshell I work as a Search Engine Optimizer at the Centre for Digital Media. My interests include front-end and back-end onsite optimizations, index optimization, AMP, content optimization, and more. I have a good understanding of 
              a(href="#{i18n.website}/category/front-end.html", 
              title="Front-End Development Category Page") front-end development
              |  and I know my way around a few Content Management Systems.
    .container
      .fifteen.columns.offset-by-one
        ul.categories
          li.sem-category.category-page
            ul.category
              li.fourteen.columns.category-item
                a.category-item-anchor(href='#{i18n.website}/project/search-engine-marketing/centre-for-digital-media.html', title='Centre for Digital Media Project Page')
                  figure.thumbnail
                    img(src='../images/centre-for-digital-media/thumb.png', 
                    alt='Centre for Digital Media', 
                    title='Centre for Digital Media')
                  .category-item-content
                    h3.category-item-title Centre for Digital Media
                    p.category-item-description In charge of the Centre for Digital Media's SEO. I make front-end and back-end optimizations, and create engaging and SEO-ready content.
              li.fourteen.columns.category-item
                a.category-item-anchor(href='#{i18n.website}/project/search-engine-marketing/petit-bateau-second-batch.html', title='Petit Bateau - Responsive (2nd Batch) Project Page')
                  figure.thumbnail
                    img(src='../images/petit-bateau-second-batch/thumb.png', 
                    alt='Petit Bateau - Responsive (2nd Batch)', 
                    title='Petit Bateau - Responsive (2nd Batch)')
                  .category-item-content
                    h3.category-item-title Petit Bateau (2nd Batch)
                    p.category-item-description Worked as an SEO consultant for Petit Bateau. I focused on PageSpeed, 404 errors, sitemaps and structured data.
              li.fourteen.columns.category-item
                a.category-item-anchor(href='#{i18n.website}/project/search-engine-marketing/ing-direct.html', title='ING Direct Project Page')
                  figure.thumbnail
                    img(src='../images/ing-direct/thumb.png', 
                    alt="ING Direct", 
                    title='ING Direct')
                  .category-item-content
                    h3.category-item-title ING Direct
                    p.category-item-description My colleague and I implemented a "news sitemap", cleaned and optimised the existing sitemaps, and solved critical errors to improve the site's indexing.
              li.fourteen.columns.category-item
                a.category-item-anchor(href='#{i18n.website}/project/search-engine-marketing/aura-soma-boutique.html', title='Aura Soma Boutique Project Page')
                  figure.thumbnail
                    img(src='../images/aura-soma-boutique/thumb.png', 
                    alt='Aura Soma Boutique', 
                    title='Aura Soma Boutique')
                  .category-item-content
                    h3.category-item-title Aura Soma Boutique
                    p.category-item-description Rewrote the category meta tags and implemented Disqus and other social media plugins to increase traffic and engagement.
